@import "element.styl"
footer()
  z-index 100
  background $bgColor
  position fixed
  height 60px
  bottom 0
  left 0
  right 0
  display: flex
  flex-direction: row
  justify-content : space-around
  .footer-list
    display: flex
    flex-direction: column
    justify-content : space-between
    text-align center
    margin 6px 0
  .footer-item
    position absolute
    margin-left 2px
  .footer-icon
    font-size 24px
    margin-top 8px
  .footer-name
    font-size 12px
  .footer-icon-chosen
    color $btnBlue
    font-size 24px
  .footer-name-chosen
    color $btnBlue
    font-size 12px
